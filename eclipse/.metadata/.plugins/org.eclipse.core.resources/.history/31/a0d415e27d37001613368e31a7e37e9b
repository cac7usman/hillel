package hw_03_stars;

public class hw_03_02
{
	public static void main(String[] args)
	{
		print();
	}

	public static void print()
	{
		int m = 15;
        int n = 10;
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (i == 0 || i == n - 1) {
                    System.out.print('*');
                } else {
                    if (j == 0 || j == m - 1) {
                        System.out.print('*');
                    } else {
                        System.out.print(' ');
                    }
                }
            }
System.out.print("\n\r");
        }
	}
}
