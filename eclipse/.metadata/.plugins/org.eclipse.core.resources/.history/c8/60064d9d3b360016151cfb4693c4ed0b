package hw_02_01_operators;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

public class HW_02_01_01Test
{

	@Test
	public void testIsEven_01()
	{
		int c = HW_02_01_01.isEven(0, 10);
		assertEquals(0, c);
	}

	@Test
	public void testIsEven_02()
	{
		int c = HW_02_01_01.isEven(1, 10);
		assertEquals(11, c);
	}

	@Test
	public void testIsEven_03()
	{
		int c = HW_02_01_01.isEven(10, 1);
		assertEquals(10, c);
	}

	@Test
	public void testIsEven_04()
	{
		int c = HW_02_01_01.isEven(10, 0);
		assertEquals(10, c);
	}

	@Test
	public void testIsEven_05()
	{
		int c = HW_02_01_01.isEven(2, 10);
		assertEquals(200, c);
	}

	@Test
	public void testIsEven_06()
	{
		int c = HW_02_01_01.isEven(11, 2);
		assertEquals(13, c);
	}

	@Test
	public void testIsEven_07()
	{
		int c = HW_02_01_01.isEven(-1, 1);
		assertEquals(0, c);
	}

	@Test
	public void testIsEven_08()
	{
		int c = HW_02_01_01.isEven(-2, 1);
		assertEquals(-2, c);
	}

	@Test
	public void testIsEven_09()
	{
		int c = HW_02_01_01.isEven(-1, -1);
		assertEquals(1, c);
	}

}
