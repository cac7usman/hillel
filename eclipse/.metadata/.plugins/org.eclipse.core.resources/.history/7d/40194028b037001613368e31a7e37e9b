package hw_03_stars;

public class HW_03_03
{
	public static void main(String[] args)
	{
		print();
	}

	private static void print()
	{
		int row = 7;
		int column = 7;
		label: for (int j = 0; j < column; j++)
		{
			for (int i = 0; i < row; i++)
			{
				if (i == 0 || i == row - 1)
				{

					System.out.print('*');

				} else
				{
					if (j == 0 || j == column - 1)
					{
						System.out.print('*');
					} else
					{
						System.out.print(' ');
					}

					if (j > i)
						break;
				}
				System.out.println();
			}

		}
	}
}