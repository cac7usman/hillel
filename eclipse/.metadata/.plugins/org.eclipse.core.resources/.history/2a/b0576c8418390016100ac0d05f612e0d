package hw_02_02_loops;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

public class HW_02_02_06Test
{

	@Test
	public void testGetReverse()
	{
		int test = HW_02_02_06.getReverse(12345);
		assertEquals(String.valueOf("54321"), test);
	}

	@Test
	public void testGetReverse_01()
	{
		int test = HW_02_02_06.getReverse(1);
		assertEquals(String.valueOf("1"), test);
	}

	@Test
	public void testGetReverse_02()
	{
		int test = HW_02_02_06.getReverse(-12345);
		assertEquals(String.valueOf("-54321"), test);
	}

}
