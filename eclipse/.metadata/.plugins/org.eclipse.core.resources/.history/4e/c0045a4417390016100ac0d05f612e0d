package hw_02_02_loops;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

public class HW_02_02_05Test
{

	@Test
	public void testGetSum_01()
	{
		int test = HW_02_02_05_Sum.getSum(12345);
		assertEquals(15, test);
	}

	@Test
	public void testGetSum_02()
	{
		int test = HW_02_02_05_Sum.getSum(123456789);
		assertEquals(45, test);
	}
	
	@Test
	public void testGetSum_03()
	{
		int test = HW_02_02_05_Sum.getSum(0);
		assertEquals(0, test);
	}
}
