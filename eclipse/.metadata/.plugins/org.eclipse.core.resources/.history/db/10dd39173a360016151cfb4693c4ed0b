package hw_02_01_operators;

/*
 * Если а – четное посчитать а*б, иначе а+б
 * */
public class HW_02_01_01
{
	public static void main(String[] args)
	{
		int i = 10;
		int k = 20;

		int j = isEven(i, k);

		System.out.println(j);

	}

	public static int isEven(int a, int b)
	{
		if (a % 2 == 0)
		{
			return (a * b);
		} else
		{
			return a + b;
		}

	}
}